<p style="color: green"><%= notice %></p>

<head>
	<%= stylesheet_link_tag "styles.css" %>
</head>


<ul>

  <%= render "/navbar"%>
  <p class="bannerBox"></p>

<%= link_to 'Current Users', users_path %>

<h1>Users to Approve</h1>

<%= form_with url: users_to_approve_path, method: 'get', id: 'search-form' do |f| %>
  <%= f.text_field :first_name, placeholder: 'Search by first name....', class: 'form-control' %>
  <%= f.text_field :last_name, placeholder: 'Search by last name....', class: 'form-control' %>
  <%= f.submit "Find Member", class: "btn" %>
<% end %>

<div id="admins">
  <% @users.each do |user| %>
    <%= render user %>
    <p>
      <%= button_to "Approve User", update_approval_admin_path(user), method: :patch %>
      <%= button_to 'Deny User', user, method: :delete, :onclick => "return confirm('Are you sure you want to deny this user?')" %>
    </p>
  <% end %>
</div>

<br>


  
</ul>





