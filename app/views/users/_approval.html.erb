
<tr>
  <td>
    <%= user_to_display.email %>
  </td>

  <td>
    <%= user_to_display.first_name %>
  </td>

  <td>
    <%= user_to_display.last_name %>
  </td>

  <td>
    <%= user_to_display.created_at%>
  </td>

  <td>
    <%= button_to "Approve User", update_approval_admin_path(user_to_display), method: :patch %>
  </td>

   <td>
      <%= button_to 'Deny User', user_to_display, method: :delete, :onclick => "return confirm('Are you sure you want to deny this user?')" %>
  </td>
  
</tr>
