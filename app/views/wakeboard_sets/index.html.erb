<p style="color: green"><%= notice %></p>

<head>
	<%= stylesheet_link_tag "styles.css" %>
  <%- title "Join a Set | TAMU Wakeboarding" %>
</head>

<%= render "/navbar"%>
  
<p class="bannerBox"></p>


<% if flash[:error]%>
  <div class = "alert alert-danger"> <%= flash[:error] %></div>
<% end %>

<div class="container mx-auto">
  <h1 class="text-3xl">Your Sets</h1>

  <h1 class="text-3xl">Available Sets</h1>

  <%= link_to new_wakeboard_set_path do %>
    <i class="fa-solid fa-circle-plus"></i> Create Set
  <% end %>

  <div class="w-full flex flex-col justify-center rounded-lg border border-slate-300 my-3 bg-white shadow-md">
    <table class="border-collapse table-auto w-full" id="wakeboard_sets">
      <thead class="border-b border-slate-300">
        <tr>
          <th class="text-start px-4 py-2">Set Date</th>
          <th class="text-start px-4 py-2">Drivers</th>
          <th class="text-start px-4 py-2">Dib Spots</th>
          <th class="text-start px-4 py-2">Chib Spots</th>
          <th class=""></th>
        </tr>
      </thead>
      <tbody class="" id="set-list">
        <%= render partial: "set", collection: @wakeboard_sets %>
      </tbody>
    </table>
    <div class="w-full flex flex-row justify-center py-2">
      <%== render partial: 'shared/pagy/nav', locals: { pagy: @pagy } %>
    </div>
  </div>
</div>
