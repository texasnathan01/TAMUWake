<p style="color: green"><%= notice %></p>

<head>
	<%= stylesheet_link_tag "styles.css" %>
</head>

<%= render "/navbar"%>
  
<p class="bannerBox"></p>

  
<h1 class="text-5xl mb-5 text-center">
  <pageTitleHolder>Sets this Week</pageTitleHolder>
</h1>

  <% if flash[:error]%>
    <div class = "alert alert-danger"> <%= flash[:error] %></div>
  <% end %>
  

<mainContentHolder>
  
  <table id="wakeboard_sets">
    <thead>
      <tr>
        <th>Set Date</th>
        <th>Drivers</th>
        <th>Dib Spots Available</th>
		<th>Chib Spots Available</th>
        <th>Join Set</th>
      </tr>
    </thead>
    <tbody>
      <% @wakeboard_sets.each do |set| %>
        <tr>
          <td><%= set.scheduled_date.strftime("%A at %l:%M %P") %></td>
          <td>Fix this with SetDriver table</td>
		  <% #set.user.firstname.capitalize + " " + set.user.lastname.capitalize.chr + "." %>
          <td><%= set.dib_limit - set.dib_count %></td>
		  <td><%= set.chib_limit - set.chib_count %></td>
          <td><%= link_to "Join", set %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "New wakeboard set", new_wakeboard_set_path %>


</mainContentHolder>