<p style="color: green"><%= notice %></p>

<% driver_names = (@drivers.length > 1) ? @drivers[0].first_name + " and " + @drivers[1].first_name : @drivers[0].first_name %>

<head>
	<%= stylesheet_link_tag "styles.css" %>
  <%- title (driver_names + "\'s Set on " + @wakeboard_set.scheduled_date.strftime("%A, %B %e at %l:%M %P") + " | TAMU Wakeboarding") %>

  <style>
    body {
      height: 100vh;
    }

    @keyframes wave {
      0% {
        transform: translateX(-5%);
      }
      50% {
        transform: translateX(5%);
      }
      100% {
        transform: translateX(-5%);
      }
    }


    .wave-container {
      margin-top: auto;
      overflow: hidden;
      width: 100vw;
    }

    .wave {
      display: block;
      transform: scale(1.2);
      /*transform: scale(150%);*/
    }

    .wave > svg {
      display: block;
      /*transform: scale(200%);*/
    }

    .wave-1 {
      animation: wave 10s ease infinite;
    }

    .wave-2 {
      animation: wave 15s ease infinite;
    }

    .wave-3 {
      animation: wave 12s ease infinite;
    }
  </style>

</head>

<%= render "/navbar"%>
  
<p class="bannerBox"></p>

<div class="container mx-auto md:px-24 sm:px-4">
  <div class="flex flex-row my-4">
    <%= link_to wakeboard_sets_path do %>
      <span><i class="fa-solid fa-caret-left"></i> Back to Set List</span>
    <% end %>
  </div>

  <div class="flex flex-row justify-between">
    <h3 class="pl-3">Set Info</h3>
    <div class="pl-3 flex w-2/3 justify-center">
      <h3>Current Riders</h3>
    </div>
  </div>

  <div class="flex flex-row justify-between gap-x-6">
    <div class="basis-1/3 p-3">
      <%= render partial: "wakeboard_set", locals: { wakeboard_set: @wakeboard_set, drivers: @drivers, joinable: @joinable } %>
    </div>

    <div class="flex flex-col basis-2/3 p-3">
      <%# <h2 class="text-center text-lg">Current Riders</h2> %>
      <div class="grid grid-cols-2 bg-white rounded-lg shadow p-3 justify-around">
        <div class="w-3/4 justify-self-center">
          <h3 class="text-center border-b mb-1">Dibs</h3>
          <table id="dib-table">
            <% (@wakeboard_set.set_riders.select {|r| r.as_dib}).each do |rider| %>
              <% i = 1%>
              <tr>
                <td class="py-1"><%= i.to_s + ". " +  rider.admin.first_name + " " + rider.admin.last_name %></td>
              </tr>
              <% i += 1%>
            <% end %>
          </table>
        </div>

        <div class="w-3/4 justify-self-center">
          <h3 class="text-center border-b mb-1">Chibs</h3>
          <table id="chib-table">
            <% (@wakeboard_set.set_riders.select {|r| !r.as_dib}).each do |rider| %>
              <% i = 1%>
              <tr>
                <td class="py-1"><%= i.to_s + ". " + rider.admin.first_name + " " + rider.admin.last_name %></td>
              </tr>
              <% i += 1%>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>

  

  <%# 
    only render delete/edit options if the user has 
    admin permissions or is a driver
  %>
  <% if current_admin.id == 2 %>
    <div>
      <%= link_to "Edit set", edit_wakeboard_set_path(@wakeboard_set) %>
      <%= button_to "Delete this set", @wakeboard_set, method: :delete %>
    </div>
  <% end %>
</div>

