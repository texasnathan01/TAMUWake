<head>
	<%= stylesheet_link_tag "styles.css" %>
  <%- title(@user.first_name + "'s Profile | TAMU Wakeboarding") %>
</head>


  <p class="bannerBox"></p>

<mainContentHolder>

  <%= render @user %>
  <table>
    <thead> <th> Current Roles </th> </thead>
    <% @roles.each do |role| %>
      <tbody> 
      <tr> 
      <td> <%= role.role.role_name %> </td> 
      </tr>
      </tbody>
    <% end %>
  </table> 

<div>
  <%= link_to "Edit this user", edit_admin_path(@user),class: "border rounded-md px-3 py-1 bg-sky-500 hover:bg-sky-700 text-neutral-100" %> |
  <%= link_to "Back to users", users_path, class: "border rounded-md px-3 py-1 bg-sky-500 hover:bg-sky-700 text-neutral-100" %>
</div>
  
</mainContentHolder>


